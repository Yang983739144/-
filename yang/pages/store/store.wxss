/* pages/store/store.wxss */
page{
  background: #fff;
}
.title{
  width: 100%;
  height: 90px;
  padding: 0 10px;
  background: #fff;
  border-top: 1px solid #ddd;
}
.title text{

  color: #000000;
}
.title-left image{
  width: 40px;
  height: 40px;
}

.title-left{
  display: flex;
  padding: 10px 0;
  float: left;
}
.title-right{
  display: flex;
  float: right;
  padding: 10px 0;
}
.title-right image{
  width: 20px;
  height: 20px;
}


.banner{
  width: 100%;
  /* height: 540px; */
  background: #2fabf4;
  text-align: center;
  padding-bottom: 20px;
}
.banner text{
  color: #fff;
}

.banner-bottom{
  display: flex;
  justify-content: space-around;
}
.border{
  width:2px;
  height:50px;
  background:#ddd;
  margin-top:20px;
}


.last{
  width: 100%; 
  background: #fff;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20px;
}
.last1{
   margin: 20px;
   text-align: center;
}
.last1 image{
  width: 60px;
  height: 60px;
}
.last1 text{
  color: #000;
}




.select_box{
  background: #fff;
  width: 20%;
  margin: 30rpx auto;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 90rpx;
  width: 93%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}




